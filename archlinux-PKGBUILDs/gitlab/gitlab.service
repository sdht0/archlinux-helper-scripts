[Unit]
Description=Gitlab Rails server
After=network.target mysql.service gitlab-sidekiq.service redis.service
Requires=gitlab-sidekiq.service

[Service]
Type=simple
User=gitlab
PIDFile=/run/gitlab.pid
WorkingDirectory=/usr/share/webapps/gitlab
Environment=RAILS_ENV=production

ExecStart=/usr/bin/bundle exec rails server

[Install]
WantedBy=multi-user.target
