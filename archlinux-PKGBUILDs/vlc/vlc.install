post_install() {
    xdg-icon-resource forceupdate --theme hicolor &> /dev/null
    usr/lib/vlc/vlc-cache-gen -f /usr/lib/vlc/plugins
    update-desktop-database -q
}

post_upgrade() {
    post_install
}

pre_remove() {
    rm -f usr/lib/vlc/plugins/plugins-*.dat
}

post_remove() {
    xdg-icon-resource forceupdate --theme hicolor &> /dev/null
    update-desktop-database -q
}
