
pkgname=kf5-knewstuff-git
_pkgname=knewstuff
pkgver=8.1b33a8e
pkgrel=1
pkgdesc="KNewStuff"
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/knewstuff"
license=('LGPL')
depends=('kf5-attica-git' 'kf5-kconfigwidgets-git' 'kf5-kio-git')
makedepends=('extra-cmake-modules-git' 'git')
conflicts=("kf5-${_pkgname}" "${_pkgname}-git" "${_pkgname}")
provides=("kf5-${_pkgname}" "${_pkgname}")
source=("git://anongit.kde.org/knewstuff")
md5sums=('SKIP')

pkgver() {
  cd "${_pkgname}"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  /opt/kf5/bin/cmake ../"${_pkgname}" \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DCMAKE_BUILD_TYPE=DebugFull \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
