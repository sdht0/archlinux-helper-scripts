
pkgname=kf5-kio-git
_pkgname=kio
pkgver=1
pkgrel=1
pkgdesc="KIO"
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/kio"
license=('LGPL')
depends=('kf5-kbookmarks-git' 'kf5-kjobwidgets-git' 'kf5-kwallet-git' 'kf5-solid-git' 'krb5' 'qt5-script')
makedepends=('extra-cmake-modules-git' 'git')
group=("kf5")
conflicts=("${_pkgname}-git")
provides=("${_pkgname}-git")
source=("git://anongit.kde.org/kio")
md5sums=('SKIP')

pkgver() {
    cd "${_pkgname}"
    echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
    mkdir -p build
}

build() {
    export XDG_DATA_DIRS="/opt/kf5/share:$XDG_DATA_DIRS"

    cd build
    /opt/kf5/bin/cmake ../"${_pkgname}" \
        -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
        -DCMAKE_BUILD_TYPE=Debug \
        -DLIB_INSTALL_DIR=lib
    make
}

package() {
    cd build
    make DESTDIR="${pkgdir}" install
}
