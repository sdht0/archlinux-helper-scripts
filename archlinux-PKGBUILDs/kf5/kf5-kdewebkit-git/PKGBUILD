
pkgname=kf5-kdewebkit-git
_pkgname=kdewebkit
pkgver=9.2a87ffb
pkgrel=1
pkgdesc="KDE Webkit"
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/kdewebkit"
license=('LGPL')
depends=('qt5-webkit' 'kf5-kwallet-framework-git' 'kf5-kparts-git')
makedepends=('extra-cmake-modules-git' 'git')
conflicts=("kf5-${_pkgname}" "${_pkgname}-git" "${_pkgname}")
provides=("kf5-${_pkgname}" "${_pkgname}")
source=("git://anongit.kde.org/kdewebkit")
md5sums=('SKIP')

pkgver() {
  cd "${_pkgname}"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  /opt/kf5/bin/cmake ../"${_pkgname}" \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DCMAKE_BUILD_TYPE=DebugFull \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
