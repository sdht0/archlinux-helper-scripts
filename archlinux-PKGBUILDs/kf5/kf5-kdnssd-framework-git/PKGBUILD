
pkgname=kf5-kdnssd-framework-git
_pkgname=kdnssd-framework
pkgver=11.4a961f6
pkgrel=1
pkgdesc="KDNSSD Framework"
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/kdnssd-framework"
license=('LGPL')
depends=('kf5-kconfig-git' 'avahi')
makedepends=('extra-cmake-modules-git' 'git')
group=("kf5")
conflicts=("${_pkgname}-git")
provides=("${_pkgname}-git")
source=("git://anongit.kde.org/kdnssd-framework")
md5sums=('SKIP')

pkgver() {
    cd "${_pkgname}"
    echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
    mkdir -p build
}

build() {
    cd build
    /opt/kf5/bin/cmake ../"${_pkgname}" \
        -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
        -DCMAKE_BUILD_TYPE=Debug \
        -DLIB_INSTALL_DIR=lib
    make
}

package() {
    cd build
    make DESTDIR="${pkgdir}" install
}
