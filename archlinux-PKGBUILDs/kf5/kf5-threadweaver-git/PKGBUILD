
pkgname=kf5-threadweaver-git
_pkgname=threadweaver
pkgver=28.a30bd44
pkgrel=1
pkgdesc="ThreadWeaver"
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/threadweaver"
license=('LGPL')
depends=('qt5-base')
makedepends=('extra-cmake-modules-git' 'git')
group=("kf5")
conflicts=("${_pkgname}-git")
provides=("${_pkgname}-git")
source=("git://anongit.kde.org/threadweaver")
md5sums=('SKIP')

pkgver() {
    cd "${_pkgname}"
    echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
    mkdir -p build
}

build() {
    cd build
    /opt/kf5/bin/cmake ../"${_pkgname}" \
        -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
        -DCMAKE_BUILD_TYPE=Debug \
        -DLIB_INSTALL_DIR=lib
    make
}

package() {
    cd build
    make DESTDIR="${pkgdir}" install
}
