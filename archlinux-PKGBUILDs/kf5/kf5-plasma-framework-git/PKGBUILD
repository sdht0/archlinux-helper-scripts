
pkgname=kf5-plasma-framework-git
_pkgname=plasma-framework
pkgver=1
pkgrel=1
pkgdesc="Plasma library and runtime components based upon KF5 and Qt5"
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/plasma-framework"
license=('LGPL')
depends=('kf5-kactivities-git' 'kf5-kdeclarative-git' 'kf5-kdnssd-git' 'kf5-kidletime-git' 'kf5-kitemmodels-git' 'kf5-kjs-git' 'kf5-kross-git' 'kf5-ktexteditor-git' 'kf5-kunitconversion-git' 'kf5-threadweaver-git')
makedepends=('extra-cmake-modules-git' 'git')
group=("kf5")
conflicts=("${_pkgname}-git")
provides=("${_pkgname}-git")
source=("git://anongit.kde.org/plasma-framework")
md5sums=('SKIP')

pkgver() {
    cd "${_pkgname}"
    echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
    mkdir -p build
}

build() {
    export PATH="/opt/kf5/bin:$PATH"
    export XDG_DATA_DIRS="/opt/kf5/share:$XDG_DATA_DIRS"
    export LD_LIBRARY_PATH="/opt/kf5/lib:$LD_LIBRARY_PATH"
    export PKG_CONFIG_PATH="/opt/kf5/lib/pkgconfig:$PKG_CONFIG_PATH"
    export KDEDIRS="/opt/kf5"

    cd build
    cmake ../"${_pkgname}" \
        -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
        -DCMAKE_BUILD_TYPE=Debug \
        -DLIB_INSTALL_DIR=lib
    make
}

package() {
    cd build
    make DESTDIR="${pkgdir}" install
}
