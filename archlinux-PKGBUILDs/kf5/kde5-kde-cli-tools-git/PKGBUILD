
pkgname=kde5-kde-cli-tools-git
_pkgname=kde-cli-tools
pkgver=1
pkgrel=1
pkgdesc="Tools based on KDE Frameworks 5 to better interact with the system."
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/kde/workspace/kde-cli-tools"
license=('LGPL')
depends=('kf5-kcmutils-git' 'kf5-kdelibs4support-git' 'kf5-kdesu-git')
makedepends=('extra-cmake-modules-git' 'git')
group=("kde5")
conflicts=("${_pkgname}-git")
provides=("${_pkgname}-git")
source=("git://anongit.kde.org/kde-cli-tools")
md5sums=('SKIP')

pkgver() {
    cd "${_pkgname}"
    echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
    mkdir -p build
}

build() {
    cd build
    /opt/kf5/bin/cmake ../"${_pkgname}" \
        -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
        -DCMAKE_BUILD_TYPE=Debug \
        -DLIB_INSTALL_DIR=lib
    make
}

package() {
    cd build
    make DESTDIR="${pkgdir}" install
}
