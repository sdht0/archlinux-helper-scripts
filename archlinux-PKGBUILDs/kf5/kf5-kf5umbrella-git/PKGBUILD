
pkgname=kf5-kf5umbrella-git
_pkgname=kf5umbrella
pkgver=5.e457a0a
pkgrel=1
pkgdesc="KF5 Umbrella"
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/kf5umbrella"
license=('LGPL')
depends=('kf5-kross-git' 'kf5-frameworkintegration-git' 'kf5-kdeclarative-git' 'kf5-kdesu-git'
        'kf5-threadweaver-git' 'kf5-threadweaver-git' 'kf5-kidletime-git' 'kf5-kitemmodels-git'
        'kf5-kprintutils-git' 'kf5-kdnssd-framework-git' 'kf5-kcmutils-git' 'kf5-knotifyconfig-git'
        'kf5-kded-git' 'kf5-knewstuff-git' 'kf5-khtml-git' 'kf5-kemoticons-git' 'kf5-kde4support-git' 'kf5-kdoctools-git')
makedepends=('extra-cmake-modules-git' 'git')
conflicts=("kf5-${_pkgname}" "${_pkgname}-git" "${_pkgname}")
provides=("kf5-${_pkgname}" "${_pkgname}")
source=("git://anongit.kde.org/kf5umbrella")
md5sums=('SKIP')

pkgver() {
  cd "${_pkgname}"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  /opt/kf5/bin/cmake ../"${_pkgname}" \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DCMAKE_BUILD_TYPE=Debug \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
