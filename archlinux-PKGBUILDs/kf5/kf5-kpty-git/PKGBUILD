
pkgname=kf5-kpty-git
_pkgname=kpty
pkgver=7.4b4f934
pkgrel=1
pkgdesc="KPty"
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/kpty"
license=('LGPL')
depends=('kf5-kcoreaddons-git' 'kf5-ki18n-git' 'libutempter')
makedepends=('extra-cmake-modules-git' 'git')
conflicts=("kf5-${_pkgname}" "${_pkgname}-git" "${_pkgname}")
provides=("kf5-${_pkgname}" "${_pkgname}")
source=("git://anongit.kde.org/kpty")
md5sums=('SKIP')

pkgver() {
  cd "${_pkgname}"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  /opt/kf5/bin/cmake ../"${_pkgname}" \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DCMAKE_BUILD_TYPE=DebugFull \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
