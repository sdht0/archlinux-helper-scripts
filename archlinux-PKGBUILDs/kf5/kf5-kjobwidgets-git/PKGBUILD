
pkgname=kf5-kjobwidgets-git
_pkgname=kjobwidgets
pkgver=11.e7650db
pkgrel=1
pkgdesc="KJobWidgets"
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/kjobwidgets"
license=('LGPL')
depends=('kf5-kwidgetsaddons-git' 'kf5-kcoreaddons-git' 'qt5-x11extras')
makedepends=('extra-cmake-modules-git' 'git')
group=("kf5")
conflicts=("${_pkgname}-git")
provides=("${_pkgname}-git")
source=("git://anongit.kde.org/kjobwidgets")
md5sums=('SKIP')

pkgver() {
    cd "${_pkgname}"
    echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
    mkdir -p build
}

build() {
    cd build
    /opt/kf5/bin/cmake ../"${_pkgname}" \
        -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
        -DCMAKE_BUILD_TYPE=Debug \
        -DLIB_INSTALL_DIR=lib
    make
}

package() {
    cd build
    make DESTDIR="${pkgdir}" install
}
