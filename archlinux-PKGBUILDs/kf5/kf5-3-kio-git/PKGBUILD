
pkgname=kf5-kio-git
_pkgname=kio
pkgver=44.149fd78
pkgrel=1
pkgdesc="KIO"
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/kio"
license=('LGPL')
depends=('krb5' 'kf5-solid-git' 'kf5-knotifications-git' 'kf5-kjobwidgets-git' 'kf5-kbookmarks-git'
         'qt5-script')
makedepends=('extra-cmake-modules-git' 'git' 'kf5-kdoctools-git')
conflicts=("kf5-${_pkgname}" "${_pkgname}-git" "${_pkgname}")
provides=("kf5-${_pkgname}" "${_pkgname}")
#install=${_pkgname}.install
source=("git://anongit.kde.org/kio")
md5sums=('SKIP')

pkgver() {
  cd "${_pkgname}"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  mkdir -p build
}

build() {
  export XDG_DATA_DIRS="/opt/kf5/share:$XDG_DATA_DIRS"

  cd build
  /opt/kf5/bin/cmake ../"${_pkgname}" \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DCMAKE_BUILD_TYPE=Debug \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
