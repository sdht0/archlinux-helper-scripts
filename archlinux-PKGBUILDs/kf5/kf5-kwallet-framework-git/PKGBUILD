
pkgname=kf5-kwallet-framework-git
_pkgname=kwallet-framework
pkgver=457.c47e879
pkgrel=1
pkgdesc=""
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/kwallet-framework"
license=('LGPL')
depends=('kf5-kservice-git' 'kf5-kiconthemes-git' 'kf5-knotifications-git')
makedepends=('extra-cmake-modules-git' 'git')
group=("kf5")
conflicts=("${_pkgname}-git")
provides=("${_pkgname}-git")
source=("git://anongit.kde.org/kwallet-framework")
md5sums=('SKIP')

pkgver() {
    cd "${_pkgname}"
    echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
    mkdir -p build
}

build() {
    cd build
    /opt/kf5/bin/cmake ../"${_pkgname}" \
        -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
        -DCMAKE_BUILD_TYPE=Debug \
        -DLIB_INSTALL_DIR=lib
    make
}

package() {
    cd build
    make DESTDIR="${pkgdir}" install
}
