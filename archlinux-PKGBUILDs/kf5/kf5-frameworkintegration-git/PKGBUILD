
pkgname=kf5-frameworkintegration-git
_pkgname=frameworkintegration
pkgver=14.b475ecb
pkgrel=1
pkgdesc="Framework providing components to allow applications to integrate with a KDE Workspace"
arch=('i686' 'x86_64')
url="http://projects.kde.org/projects/frameworks/frameworkintegration"
license=('LGPL')
depends=('kde5-attica-git' 'kf5-kio-git' 'kf5-kiconthemes-git')
makedepends=('extra-cmake-modules-git' 'git')
conflicts=("kf5-${_pkgname}" "${_pkgname}-git" "${_pkgname}")
provides=("kf5-${_pkgname}" "${_pkgname}")
source=("git://anongit.kde.org/frameworkintegration")
md5sums=('SKIP')

pkgver() {
  cd "${_pkgname}"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  /opt/kf5/bin/cmake ../"${_pkgname}" \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DCMAKE_BUILD_TYPE=DebugFull \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
