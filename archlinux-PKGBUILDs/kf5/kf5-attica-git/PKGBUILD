# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=kf5-attica-git
pkgver=v4.97.0
pkgrel=1
pkgdesc='A Qt5 library that implements the Open Collaboration Services API'
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/kdesupport/attica'
license=('LGPL')
depends=('qt5-base')
makedepends=('extra-cmake-modules-git' 'git')
source=('git://anongit.kde.org/attica')
md5sums=('SKIP')

pkgver() {
  cd attica
  git describe --always | sed 's|-|.|g'
}

prepare() {
  mkdir -p build
}

build() {

  cd build
  /opt/kf5/bin/cmake ../attica \
    -DCMAKE_BUILD_TYPE=Debug \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
