# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=plasma-nm
pkgver=0.plasma2tp
pkgrel=1
pkgdesc='Plasma applet written in QML for managing network connections'
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/playground/network/plasma-nm'
license=('GPL2')
depends=('plasma-framework' 'libnm-qt' 'frameworkintegration')
makedepends=('cmake' 'git')
optdepends=('mobile-broadband-provider-info: Database of mobile broadband service providers')
source=(${pkgname}-${pkgver}.tar.bz2::"http://quickgit.kde.org/?p=plasma-nm.git&a=snapshot&h=424a4cf481192eb5f5953f82855ef51cec12a00a&fmt=tbz2")
sha256sums=('SKIP')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../plasma-nm \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DCMAKE_BUILD_TYPE=Release \
    -DLIB_INSTALL_DIR=lib \
    -DBUILD_TESTING=OFF
#    -DSYSCONF_INSTALL_DIR=/etc
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
